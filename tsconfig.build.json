{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "jsx": "react-jsx", // Оставьте, если используете JSX
    "allowJs": true // Если в проекте есть .js файлы
  },
  "include": ["index.ts", "src/**/*"], // Какие файлы компилировать
  "exclude": ["node_modules", "dist", "tests"] // Исключить ненужное
}