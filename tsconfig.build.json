{
	"compilerOptions": {
		"lib": ["ESNext"],
		"outDir": "dist",
		"rootDir": ".",
		"declaration": true,
		"declarationDir": "dist",
		"target": "ESNext",
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"noEmit": false,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,
		"allowJs": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
